	for i in tiles_data:
		i = i as DataGameTile
		
		set_cellv(world_to_map(i.pos), (i.block_id * GameTileSetData.TILE_COUNT) + GameTileSetData.SUBTILE_POSITION_IDS.get(i.tileset_offset))

