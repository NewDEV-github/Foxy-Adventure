#Delete selected objects in the editor
func delete():
	if SelectedObjects.is_empty():
		return
	
	for i in SelectedObjects.selected_objects:
		if i is Node:
			i.queue_free()
	
	SelectedObjects.remove_all()
	UnsaveChanges.set_activated()

